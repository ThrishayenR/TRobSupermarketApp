<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Invoice - Supermarket App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    
    <style>
        /* Base Styles for Screen */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f7f7; /* Light background for screen */
            padding-top: 20px;
            padding-bottom: 50px;
        }
        
        /* Invoice Container Styling */
        .invoice-box {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 40px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            max-width: 900px; /* Wider for professional look */
            margin: 0 auto;
        }

        /* Header/Branding Accent (Olive Green) */
        .invoice-header {
            border-bottom: 4px solid #8fa83e; /* Thick olive line */
            padding-bottom: 10px;
            margin-bottom: 25px;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }
        .invoice-header h2 {
            font-weight: 700;
            color: #333;
            font-size: 2.2rem;
            margin-bottom: 0;
        }
        .invoice-meta {
            text-align: right;
            font-size: 0.9rem;
            color: #666;
        }
        .invoice-meta strong {
            color: #333;
            font-weight: 600;
        }

        /* Table Styling */
        .table thead th {
            background-color: #f0f0f0; /* Light gray header */
            border-bottom: 2px solid #ddd !important;
            font-weight: 600;
            color: #333;
        }
        .table tbody tr:last-child {
            border-bottom: none;
        }

        /* Total Section Styling */
        .total-section {
            display: flex;
            justify-content: flex-end;
            margin-top: 25px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-size: 1.25rem;
        }
        .total-section h4 {
            font-weight: 700;
            color: #8fa83e; /* Olive green total text */
            margin-bottom: 0;
            padding: 5px 15px;
            border: 2px solid #8fa83e;
            border-radius: 4px;
        }
        
        /* Utility Button Styles */
        .btn-print {
            background-color: #8fa83e;
            border-color: #8fa83e;
            color: white;
            font-weight: bold;
        }
        .btn-print:hover {
            background-color: #799131;
            border-color: #799131;
            color: white;
        }
        
        /* Print Media Query (REQUIRED - KEEP ORIGINAL FUNCTIONALITY) */
        @media print {
            nav, footer, .btn, .no-print {
                display: none !important;
            }
            body {
                margin: 0;
                padding: 0;
                background-color: #ffffff;
            }
            .invoice-box {
                box-shadow: none;
                border: none;
                padding: 0;
                margin: 0;
                max-width: none;
            }
            .table {
                font-size: 0.9rem;
            }
            .table img {
                display: none; /* Hide images when printing to save ink */
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="invoice-box">
            
            <div class="invoice-header">
                <h2>INVOICE</h2>
                <div class="invoice-meta">
                    <p class="mb-0">Invoice #<strong>INV-<%= Math.floor(Math.random() * 90000) + 10000 %></strong></p>
                    <p class="mb-0">Date: <strong><%= new Date().toLocaleDateString('en-SG', { year: 'numeric', month: 'short', day: 'numeric' }) %></strong></p>
                    <p class="mb-0">Order ID: <strong>[Your Order ID]</strong></p>
                </div>
            </div>

            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th width="40%">Product</th>
                        <th width="15%" class="no-print">Image</th>
                        <th width="15%">Price</th>
                        <th width="10%">Quantity</th>
                        <th width="20%">Line Total</th>
                    </tr>
                </thead>
                <tbody>

                    <% let total = 0; %>

                    <% items.forEach(item => { 
                        const lineTotal = item.price * item.quantity;
                        total += lineTotal;
                    %>
                        <tr>
                            <td><%= item.productName %></td>
                            <td class="no-print">
                                <% if (item.image) { %>
                                    <img src="/images/<%= item.image %>" width="60" class="img-thumbnail"> 
                                <% } else { %>
                                    <span class="text-muted">No image</span>
                                <% } %>
                            </td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= lineTotal.toFixed(2) %></td>
                        </tr>
                    <% }) %>

                </tbody>
            </table>

            <div class="total-section">
                <h4>TOTAL: $<%= total.toFixed(2) %></h4>
            </div>

            <div class="mt-5 text-center no-print">
                <button onclick="window.print()" class="btn btn-print me-3">
                    Print Invoice
                </button>
                <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
            </div>
            
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>