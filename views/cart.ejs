<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include("partials/navbar") %>

  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>

    <% if (!cartItems || cartItems.length === 0) { %>
      <p>Your cart is empty.</p>
      <a href="/shopping" class="btn btn-primary mt-3">Back to Shopping</a>
    <% } else { %>

      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cartItems.length; i++) { 
               const item = cartItems[i];
               const lineTotal = (Number(item.price) || 0) * (Number(item.quantity) || 0);
               total += lineTotal;
          %>
            <tr>
              <td><%= item.productName %></td>
              <td>
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" width="80" class="img-thumbnail">
                <% } else { %>
                  <span class="text-muted">No image</span>
                <% } %>
              </td>
              <td>$<%= (Number(item.price) || 0).toFixed(2) %></td>
              <td><%= item.quantity %></td>
              <td>$<%= lineTotal.toFixed(2) %></td>
              <td>
                <form action="/cart/remove" method="POST" class="d-inline">
                  <input type="hidden" name="fineId" value="<%= item.product_id %>">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4 d-flex gap-2">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>

        <form action="/cart/clear" method="POST">
          <button type="submit" class="btn btn-warning">Clear Cart</button>
        </form>

        <form action="/checkout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-primary">Checkout</button>
        </form>

      </div>

    <% } %>
  </div>

  <%- include("partials/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>